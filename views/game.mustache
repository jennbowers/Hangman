<!DOCTYPE html>
<html lang=en>
  <head>
    <meta charset="utf-8">
    <meta name=“viewport” content=“width=device-width", initial-scale=1">
    <title>Mystery Word</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <!-- <h1>Me too!</h1> -->
    <header>
      <div class="game_title">Mystery Word</div>
      <div class="counter">You have {{guessesLeft}} left</div>
    </header>
    <div class="all_letters_div">
      {{#letters}}
      <span class="letter {{.}}">{{#.}}__{{/.}}{{^.}}yay{{/.}}</span>
      {{/letters}}
    </div>
    <div class="errors">
        {{#errors}}
        <p>{{msg}}</p>
        {{/errors}}
        {{#duplicateErrorMsg}}
        <p>{{.}}</p>
        {{/duplicateErrorMsg}}
    </div>
    <div class="choose_letters_div">
      <form class="choose_letters" action="" method="post">
        <input type="text" name="user_input" placeholder="Pick a letter!" value="">
        <input type="submit" name="" value="Guess!">
      </form>
    </div>
    <div class="guessed_letters">
      <h4>Guessed Letters</h4>
      {{#guessedLetters}}
      <span>{{.}}</span>
      {{/guessedLetters}}
      <div class="letters_container">
      </div>
    </div>
  </body>
</html>
